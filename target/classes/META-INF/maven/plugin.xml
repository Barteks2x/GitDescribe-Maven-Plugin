<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <name>Git Describe Maven Plugin</name>
  <description>This plugin is designed to give you a build number. So when you might make 100 builds of version
     1.0-SNAPSHOT, you can differentiate between them all.</description>
  <groupId>com.lukegb.mojo</groupId>
  <artifactId>gitdescribe-maven-plugin</artifactId>
  <version>1.2</version>
  <goalPrefix>gitdescribe</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>gitdescribe</goal>
      <description>Goal which sets project properties for describer from the
current Git repository.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.lukegb.mojo.build.GitDescribeMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
      <parameters>
        <parameter>
          <name>outputPostfix</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>String to append to git describe/shorttag output</description>
        </parameter>
        <parameter>
          <name>outputPrefix</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>String to prepend to git describe/shorttag output</description>
        </parameter>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>false</required>
          <editable>false</editable>
          <description>The maven project.</description>
        </parameter>
        <parameter>
          <name>scmDirectory</name>
          <type>java.io.File</type>
          <required>false</required>
          <editable>true</editable>
          <description>Local directory to be used to issue SCM actions</description>
        </parameter>
      </parameters>
      <configuration>
        <outputPrefix implementation="java.lang.String" default-value="git-"/>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
        <scmDirectory implementation="java.io.File" default-value="${basedir}">${maven.changeSet.scmDirectory}</scmDirectory>
      </configuration>
    </mojo>
  </mojos>
